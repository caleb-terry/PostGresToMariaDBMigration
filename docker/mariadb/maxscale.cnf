[maxscale]
threads=auto
admin_host=0.0.0.0
admin_port=8989
admin_secure_gui=false

# Primary Server
[server1]
type=server
address=mariadb-primary
port=3306
protocol=MariaDBBackend

# Replica 1
[server2]
type=server
address=mariadb-replica1
port=3306
protocol=MariaDBBackend

# Replica 2
[server3]
type=server
address=mariadb-replica2
port=3306
protocol=MariaDBBackend

# Monitor for MariaDB servers
[MariaDB-Monitor]
type=monitor
module=mariadbmon
servers=server1,server2,server3
user=maxscale
password=maxscale123
monitor_interval=2000
backend_connect_timeout=3
backend_write_timeout=3
backend_read_timeout=3

# Read/Write Split Router Service
[Read-Write-Service]
type=service
router=readwritesplit
servers=server1,server2,server3
user=maxscale
password=maxscale123
max_slave_connections=100%

# Read-Only Router Service
[Read-Only-Service]
type=service
router=readconnroute
servers=server2,server3
user=maxscale
password=maxscale123
router_options=slave

# Listener for Read/Write Split
[Read-Write-Listener]
type=listener
service=Read-Write-Service
protocol=MariaDBClient
port=4000

# Listener for Read-Only
[Read-Only-Listener]
type=listener
service=Read-Only-Service
protocol=MariaDBClient
port=4001